extends layout/layout.pug
block content
  .row
    .col.s10.offset-s1
      table
        thead
          tr
            th id
            th Folio
            th Nombre completo
            th Telefono
            th OPCIONES
        tbody
        each afiliado in afiliados
          tr
            td= afiliado.id
            td= afiliado.data.folio
            td= afiliado.data.nombre
            td= afiliado.data.telefono_1
            td 
            
              a.waves-effect
                i.material-icons.left delete
                          
              a.waves-effect
                i.material-icons.left update
                

              a(href=`/view?data=${afiliado.id}`).waves-effect
                i.material-icons.left visibility
              