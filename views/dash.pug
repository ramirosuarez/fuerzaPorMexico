extends layout/layout.pug
block content
  .row
    .col.s10.offset-s1
      table
        thead
          tr
            th id
            th Folio
            th Nombre completo
            th Telefono
            th OPCIONES
        tbody
        each afiliado in afiliados
          tr
            td= afiliado.id
            td= afiliado.data.folio
            td= afiliado.data.nombre
            td= afiliado.data.telefono_1
            td 
            
              a(href=`/delete/${afiliado.id}`).waves-effect
                i.material-icons.left(style="color:black") delete
                          
              a(href=`/update/${afiliado.id}`).waves-effect
                i.material-icons.left(style="color:black") update
                
              a(href=`/view/${afiliado.id}`).waves-effect
                i.material-icons.left(style="color:black") visibility
                
      a(href=`/add`).waves-effect
        i.material-icons.left(style="color:black") add
              