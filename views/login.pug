extends layout/layout.pug
block content
  
  .row
    .col.s10.offset-s1
      .center( style="margin:15% auto")
        h4 Inicio de sesion
        img.center(src="../static/img/logo.jpg", alt="" style="border-radius:10%;" )
      form.col.s12(method='POST' action='/login')
        .row
          fieldset.col.s12.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
            legend Correo Electronico
            input.black-text(type='email' name='email' placeholder='Correo electronico' style='border: none;margin-bottom: 20px;width: 90%;' )
          fieldset.col.s12.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px;')
            legend Password
            input.black-text(type='password' name='password' placeholder='Contrase√±a' style='border: none;margin-bottom: 20px;width: 90%;' )
          button.btn.col.s12.pink.lighten-2(value='Ingresar' type='submit' style='border-radius: 10px; margin-top: 20px;background-color: #dd1917;' onclick='background-color: green')
            i.material-icons.right login
            | Ingresar
      a.btn.col.s12.pink.lighten-4(href='/' style='border-radius: 10px;')
        i.material-icons.left chevron_left
        | Volver