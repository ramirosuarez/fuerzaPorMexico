          input.black-text(type='text' name='nombre' id='nombre' placeholder='Nombre Completo' style='border: none;margin-bottom: 20px;width: 90%;')
        
        fieldset.col.s12.m5.offset-m1.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
          legend Apeliido Paterno
          input.black-text(type='text' name='apellido_p' placeholder='Apellido Paterno' style='border: none; margin-bottom: 20px; width: 90%;')
        
        fieldset.col.s12.m6.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
          legend Apeliido Materno
          input.black-text(type='text' name='apellido_m' placeholder='Apellido Materno' style='border: none; margin-bottom: 20px; width: 90%;')
        
        fieldset.col.s12.m5.offset-m1.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
          legend Folio
          input.black-text(type='number' name='folio' placeholder='Folio' style='border: none; margin-bottom: 20px; width: 90%;')
        
        fieldset.col.s12.m6.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
          legend Servicios
          input.black-text(type='text' name='especialidad' placeholder='Servicios' style='border: none;margin-bottom: 20px;width: 90%;' id='' )
        
        fieldset.col.s12.m5.offset-m1.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
