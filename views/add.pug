          legend Numero Telefonico
          input.black-text(type='number' name='telefono' placeholder='Numero Telefonico' style='border: none;margin-bottom: 20px;width: 90%;' id='' )
        
        fieldset.col.s12.m3.offset-m1.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
          legend Fecha de nacimiento
          input.black-text(type="date" name='fecha_nacimiento' style='border: none;margin-bottom: 20px;width: 90%;' id='' )
        
        fieldset.col.s12.m4.offset-m1.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
