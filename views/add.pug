          legend Ciudad
          input.black-text(type='text' name='ciudad' placeholder='Ciudad' style='border: none;margin-bottom: 20px;width: 90%;' id='' )

        fieldset.col.s12.m6.offset-m1.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px;margin-bottom: 12px;')
