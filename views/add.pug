    h4.center.black-text FORMULARIO DE REGITRO PARA AFILIADOS
    .col.s10.offset-s1.m10.offset-m1
      form(method='POST' action='add')

        fieldset.col.s12.m6.center.black-text(style='border: 1px solid #bdbdbd; border-radius: 12px; margin-bottom: 12px;')
